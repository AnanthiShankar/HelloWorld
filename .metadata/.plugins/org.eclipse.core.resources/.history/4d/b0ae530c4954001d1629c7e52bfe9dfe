package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class HomePage {
	@FindBy(xpath="//*[@id=\"explore-beauty\"]/div[2]/div/div[1]/div/form/div/button")
	WebElement firstItem;
	@FindBy(xpath="//*[@id=\"explore-beauty\"]/h2")
	WebElement LimitedOfferText;
	
	 public void HomePagetoAddItems() {
		 JavascriptExecutor js = (JavascriptExecutor) driver;
		  	WebElement obj1= driver.findElement(LimitedOfferText);
		  	js.executeScript("arguments[0].scrollIntoView()",obj1);
		 firstItem.click();
		 
	 }
}
